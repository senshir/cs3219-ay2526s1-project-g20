{
  "name": "question-service",
  "version": "1.0.0",
  "description": "Question management microservice for PeerPrep",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:db": "jest src/tests/simple.test.ts",
    "test:api": "jest src/tests/api.test.ts",
    "seed": "ts-node src/scripts/seedDatabase.ts",
    "seed:prod": "node dist/scripts/seedDatabase.js",
    "seed-leetcode": "ts-node src/scripts/seedLeetCodeQuestions.ts",
    "seed-leetcode:prod": "node dist/scripts/seedLeetCodeQuestions.js",
    "add-questions": "ts-node src/scripts/addQuestions.ts",
    "add-questions:prod": "node dist/scripts/addQuestions.js",
    "add-test-cases": "ts-node src/scripts/addTestCasesToQuestions.ts",
    "add-test-cases:prod": "node dist/scripts/addTestCasesToQuestions.js",
    "test:all": "npm run test:db && npm run test:api"
  },
  "keywords": [
    "peerprep",
    "questions",
    "microservice"
  ],
  "author": "G20",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.0",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "express-validator": "^7.0.1",
    "morgan": "^1.10.0",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.20",
    "@types/cors": "^2.8.15",
    "@types/morgan": "^1.9.7",
    "@types/node": "^20.8.0",
    "@types/compression": "^1.7.5",
    "@types/supertest": "^2.0.16",
    "typescript": "^5.2.2",
    "ts-node": "^10.9.1",
    "nodemon": "^3.0.1",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "eslint": "^8.52.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.5",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1"
  }
}
